generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id              String          @id    @default(uuid())
  username        String                 @unique
  email           String                 @unique
  password        String             
  profilePicture  String
  rooms           Room[]                 @relation(fields: [roomId])
  message         Messages               @relation((fields: [id]))
}


model Room{
  id            String            @id   @default(uuid())  
  roomId        String            
  name          String            
  roomPicture   String
  users         User[]
}


model Messages {
  id            String           @id     @default(uuid())
  sender        User
  room_id       Room
  text          String
  timestamp     DateTime                 @default(now())
}